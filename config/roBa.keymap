    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q       &kp W     &kp E      &kp R            &kp T                                                    &kp Y         &kp U  &kp I      &kp O       &kp P
&kp A       &kp S     &kp D      &kp F            &kp G            &kp LCTRL              &kp DEL          &kp H         &kp J  &kp K      &kp L       &kp BSPC
&kp Z       &kp X     &kp C      &kp V            &kp B            &mo 5                  &kp EQUAL        &kp N         &kp M  &kp COMMA  &kp PERIOD  &kp TAB
&kp LSHIFT  &kp LALT  &kp LCTRL  &kth LALT LANG1  &kth LGUI LANG2  &ssh LSHIFT SPACE      &kth RSHIFT RET  &lth 1 LANG1                                &mt RSHIFT ESC
            >;
