/ {
    combos {
        compatible = "zmk,combos";

        boot {
            bindings = <&bootloader>;
            key-positions = <27 15 16 28>;
        };

        rshift {
            bindings = <&kp LSHIFT>;
            key-positions = <19 18>;
        };

        lshift {
            bindings = <&kp RSHFT>;
            key-positions = <12 13>;
        };

        mb2 {
            bindings = <&mkp MB2>;
            key-positions = <31 32>;
        };

        shift {
            bindings = <&kp LSHIFT>;
            key-positions = <39 40>;
        };

        bs {
            bindings = <&kp MINUS>;
            key-positions = <19 20>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };
    };

    behaviors {
        // ホーム行や修飾キー用（現在 kth/lth は hold-preferred）

        kth: kth {
            compatible = "zmk,behavior-hold-tap";
            label = "KTH";
            #binding-cells = <2>;
            tapping-term-ms = <180>;       // 170から微増。hold-preferredでの誤判定を抑制
            quick-tap-ms = <200>;
            bindings = <&kp>, <&kp>;

            flavor = "hold-preferred";     // 変更なし
        };

        lth: lth {
            compatible = "zmk,behavior-hold-tap";
            label = "LTH";
            #binding-cells = <2>;
            tapping-term-ms = <170>;
            quick-tap-ms = <200>;
            bindings = <&mo>, <&kp>;

            flavor = "hold-preferred";     // 変更なし
        };

        // 親指スペース・シフト用（ssh/hhs は tap-preferred）

        ssh: ssh {
            compatible = "zmk,behavior-hold-tap";
            label = "SSH";
            #binding-cells = <2>;
            tapping-term-ms = <75>;       // 140からさらに短縮。親指の反応を爆速に
            quick-tap-ms = <200>;
            bindings = <&kp>, <&kp>;

            require-prior-idle-ms = <10>;
            flavor = "tap-preferred";      // 変更なし
            retro-tap;
            hold-trigger-key-positions = <18 19 20 7>;
        };

        hhs: hhs {
            compatible = "zmk,behavior-hold-tap";
            label = "HHS";
            #binding-cells = <2>;
            tapping-term-ms = <170>;       // 140から短縮
            quick-tap-ms = <200>;
            require-prior-idle-ms = <0>;   // ★0に変更：スペースの「変換」や「決定」の遅延を解消
            bindings = <&mo>, <&kp>;

            flavor = "tap-preferred";      // 変更なし
            retro-tap;
        };

        td_mytd: tap_dance_my {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_MY";
            #binding-cells = <0>;
            bindings = <&kth LEFT_GUI LANG2>, <&kp LANG1>;

            tapping-term-ms = <100>;
        };

        td_j_etr: tap_dance_j_enter {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_J_ENTER";
            #binding-cells = <0>;
            bindings = <&kp J>, <&kp ENTER>;

            tapping-term-ms = <180>;
        };

        td_sp_alt: tap_dance_spc_alt {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_SPC_ALT";
            #binding-cells = <0>;
            bindings = <&kp SPACE>, <&kp LEFT_ALT>;

            tapping-term-ms = <180>;
        };
    };

