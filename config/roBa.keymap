    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q       &kp W         &kp E             &kp R  &kp T                                                &kp Y         &kp U      &kp I      &kp O       &kp P
&kp A       &kp S         &kp D             &kp F  &kp G            &kp LEFT_CONTROL      &kp MINUS     &kp H         &td_j_etr  &kp K      &kp L       &kp BACKSPACE
