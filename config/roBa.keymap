    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q       &kp W     &kp E      &kp R      &kp T                                               &kp Y         &kp U  &kp I      &kp O       &kp P
&kp A       &kp S     &kp D      &kp F      &kp G            &kp LCTRL            &kp DEL       &kp H         &kp J  &kp K      &kp L       &kp BACKSPACE
&kp Z       &kp X     &kp C      &kp V      &kp B            &mo 2                &kp EQUAL     &kp N         &kp M  &kp COMMA  &kp PERIOD  &kp TAB
&kp LSHIFT  &kp LALT  &kp LCTRL  &kp LCTRL  &kth LGUI LANG2  &ssh LALT SPACE      &lth 2 ENTER  &lth 1 LANG1                                &mt RSHIFT ESC
            >;
        };

        ARROW {
            bindings = <
&kp EXCL   &kp AT    &kp HASH   &kp DLLR   &kp PRCNT                      &kp LBKT       &kp RBKT  &kp UP    &kp MINUS  &kp EQUAL
&kp CARET  &kp AMPS  &kp ASTRK  &kp SLASH  &kp COLON  &trans      &trans  &kp BACKSLASH  &kp LEFT  &kp DOWN  &kp RIGHT  &trans
&kp QMARK  &kp PIPE  &kp LPAR   &kp RPAR   &kp SEMI   &trans      &trans  &kp GRAVE      &kp SQT   &kp LPAR  &kp RPAR   &trans
&trans     &trans    &trans     &trans     &trans     &trans      &trans  &trans                                        &trans
            >;
        };

        NUM {
            bindings = <
&kp F1  &kp F2   &kp F3   &kp F4   &trans                              &kp SLASH   &kp N7  &kp N8  &kp N9  &kp N0
&kp F5  &kp F6   &kp F7   &kp F8   &kp LS(LG(N4))  &trans      &trans  &kp PERIOD  &kp N4  &kp N5  &kp N6  &trans
&kp F9  &kp F10  &kp F11  &kp F12  &kp LS(LG(N5))  &trans      &trans  &kp COMMA   &kp N1  &kp N2  &kp N3  &trans
&trans  &trans   &trans   &trans   &trans          &trans      &trans  &trans                              &trans
            >;
        };

        FUNCTION {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &kp LBRC   &kp RBRC           &kp LA(UP)    &kp UNDER      &kp PLUS
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &kp PIPE   &kp LA(LEFT)       &kp LA(DOWN)  &kp LA(RIGHT)  &kp LA(BACKSPACE)
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &kp TILDE  &kp DOUBLE_QUOTES  &trans        &trans         &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                                                     &trans
            >;
        };

        MOUSE {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans  &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &mkp MB1  &mo 5   &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                            &trans
            >;
        };

        SCROLL {
            bindings = <
&trans  &trans  &trans  &trans  &trans                         &trans        &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans     &trans        &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans     &trans        &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &kp LG(W)  &kp LG(LEFT)                          &trans
            >;
        };

        layer_6 {
            bindings = <
&kp N1      &kp N2     &kp N3     &kp N4    &kp N5                         &trans  &kp LA(LG(LEFT))  &kp LC(UP)    &kp LG(LA(RIGHT))  &trans
&kp N6      &kp N7     &kp N8     &kp N9    &kp N0     &trans      &trans  &trans  &kp LC(LEFT)      &kp LC(DOWN)  &kp LC(RIGHT)      &trans
&kp PERIOD  &kp COMMA  &kp MINUS  &kp PLUS  &kp SLASH  &trans      &trans  &trans  &trans            &trans        &trans             &trans
&trans      &trans     &trans     &trans    &trans     &trans      &trans  &trans                                                     &trans
            >;
        };

        layer_7 {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 3  &trans  &trans                              &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans  &trans  &bt BT_CLR_ALL      &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans  &trans  &trans              &trans  &trans                          &trans
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        function {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
